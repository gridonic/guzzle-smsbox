<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true">

    <testsuites>
        <testsuite name="gridonic-guzzle-smsbox">
            <directory>./tests/Gridonic/Guzzle/SmsBox/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./src/Gridonic/Guzzle/SmsBox</directory>
        </whitelist>
    </filter>

</phpunit>